{{ attach_library('un_date/un-date') }}

{%
	set classes = [
		'un-date',
    un_is_rtl() ? 'rtl' : 'ltr'
	]
%}

<dl{{ attributes.addClass(classes) }}>
  <div class="un-date__wrapper un-date__wrapper--date un-date__wrapper--date--start">
    <dt class="un-date__label">{{ 'Date'|t }}:</dt>
    <dd class="un-date__date"><time class="un-date__date__value" datetime="{{ iso_start_date }}">{{ start_date }} {{ start_time }}{% if display_timezone %} <span class="un-date__timezone">({{ timezone }})</span>{% endif %}</time></dd>
  </div>
</dl>
